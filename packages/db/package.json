{
  "name": "@storyforge/db",
  "description": "Storyforge drizzle schemas and client",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "check": "run-p --continue-on-error lint typecheck",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "db:generate": "pnpm drizzle-kit generate",
    "db:migrate": "pnpm drizzle-kit migrate",
    "db:push": "pnpm drizzle-kit push",
    "db:query": "tsx scripts/db-query.ts",
    "db:studio": "pnpm drizzle-kit studio",
    "drizzle-kit": "pnpm exec tsx node_modules/drizzle-kit/bin.cjs",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write --unsafe .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@libsql/client": "catalog:",
    "@storyforge/config": "workspace:*",
    "@storyforge/utils": "workspace:*",
    "drizzle-orm": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "drizzle-kit": "catalog:",
    "typescript": "catalog:"
  }
}
