{
  "name": "@storyforge/db",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./schema": {
      "import": "./dist/schema/index.js",
      "types": "./dist/schema/index.d.ts"
    },
    "./repositories": {
      "import": "./dist/repositories/index.js",
      "types": "./dist/repositories/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "check": "run-p --continue-on-error lint typecheck",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:query": "tsx scripts/db-query.ts",
    "db:studio": "drizzle-kit studio",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@storyforge/config": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.3.0",
    "drizzle-orm": "^0.44.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "drizzle-kit": "^0.31.4",
    "typescript": "catalog:",
    "@types/node": "catalog:"
  }
}
