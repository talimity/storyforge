{
  "name": "@storyforge/prompt-rendering",
  "description": "Prompt template rendering engine for Storyforge.",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "check": "run-p --continue-on-error lint typecheck",
    "clean": "rm -rf dist",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
