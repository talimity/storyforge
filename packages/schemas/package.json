{
  "name": "@storyforge/schemas",
  "description": "Shared zod schemas for Storyforge.",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "check": "run-p --continue-on-error lint typecheck",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write --unsafe .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@storyforge/inference": "workspace:*",
    "@storyforge/prompt-rendering": "workspace:*",
    "@storyforge/gentasks": "workspace:*",
    "@trpc/server": "catalog:",
    "trpc-to-openapi": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/node": "catalog:"
  }
}
