{
  "name": "@storyforge/inference",
  "description": "Provides gentask types and datasource registries for use with the gentask runner and prompt rendering systems.",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b tsconfig.build.json && resolve-tspaths --out dist",
    "check": "run-p --continue-on-error lint typecheck",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write --unsafe .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@storyforge/utils": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "resolve-tspaths": "catalog:"
  }
}
