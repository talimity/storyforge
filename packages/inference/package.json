{
  "name": "@storyforge/inference",
  "description": "Provides gentask types and datasource registries for use with the gentask runner and prompt rendering systems.",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./jinja": {
      "types": "./dist/template/jinja.d.ts",
      "default": "./dist/template/jinja.js"
    }
  },
  "typesVersions": {
    "*": {
      "jinja": [
        "dist/template/jinja.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write --unsafe .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsgo -p tsconfig.json --noEmit",
    "typecheck:legacy": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@huggingface/jinja": "^0.5.1",
    "@storyforge/utils": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@typescript/native-preview": "catalog:",
    "vitest": "catalog:"
  }
}
