{
  "name": "@storyforge/gentasks",
  "description": "Provides a workflow runner for generative AI tasks, and schemas for task kinds.",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",

    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write --unsafe .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsgo -p tsconfig.json --noEmit",
    "typecheck:legacy": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@storyforge/inference": "workspace:*",
    "@storyforge/prompt-rendering": "workspace:*",
    "@storyforge/utils": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@typescript/native-preview": "catalog:",
    "vitest": "catalog:"
  }
}
