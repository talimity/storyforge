{
  "name": "storyforge",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter=!frontend -r run build",
    "build:frontend": "pnpm --filter frontend run build",
    "clean": "pnpm -r run clean",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev": "concurrently -c blue,green pnpm:dev:*",
    "fmt": "pnpm -r --parallel run fmt",
    "lint": "pnpm -r --parallel lint && pnpm --parallel typecheck",
    "typecheck": "pnpm --parallel run typecheck",
    "typecheck:legacy": "pnpm --parallel run typecheck:legacy",
    "test": "pnpm -r --parallel run test"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@typescript/native-preview": "catalog:",
    "concurrently": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
