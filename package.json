{
  "name": "storyforge",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:frontend": "pnpm --filter frontend run build",
    "build:clean": "tsc --build --clean && tsc --build",
    "build": "tsc --build",
    "check": "run-p --continue-on-error lint typecheck",
    "clean": "pnpm run --parallel clean",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev": "pnpm run --parallel dev",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write --unsafe .",
    "typecheck": "pnpm run --parallel typecheck",
    "usage": "ccusage blocks"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "ccusage": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
