{
  "name": "storyforge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:packages": "pnpm run --parallel --filter './packages/*' build",
    "build:apps": "pnpm run --parallel --filter './apps/*' build",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "check": "run-p --continue-on-error lint typecheck",
    "clean": "pnpm run --parallel clean",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev": "pnpm run --parallel dev",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write .",
    "typecheck": "pnpm run --parallel typecheck",
    "usage": "ccusage blocks"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "ccusage": "^15.5.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.3",
    "typescript": "^5.5.3"
  }
}
