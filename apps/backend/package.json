{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "check": "run-p --continue-on-error lint typecheck",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "pnpm tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:query": "pnpm tsx scripts/db-query.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "pnpm tsx watch src/main.ts",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write .",
    "start": "node dist/main.js",
    "test:import": "pnpm tsx scripts/test-card-import.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/multipart": "^9.0.0",
    "@fastify/static": "^8.0.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@storyforge/shared": "workspace:*",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "fastify": "^5.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "png-chunk-text": "^1.0.0",
    "png-chunks-encode": "^1.0.0",
    "png-chunks-extract": "^1.0.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^2.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.15",
    "drizzle-kit": "^0.31.4"
  }
}
