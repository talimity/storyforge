{
  "name": "@storyforge/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "check": "run-p --continue-on-error lint typecheck",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "pnpm tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:query": "pnpm tsx scripts/db-query.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "pnpm tsx watch src/main.ts",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write .",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:completion": "pnpm tsx scripts/test-completion.ts",
    "test:import": "pnpm tsx scripts/test-card-import.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/reply-from": "^12.2.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.2.0",
    "@fastify/websocket": "^11.2.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@storyforge/api": "workspace:*",
    "@storyforge/shared": "workspace:*",
    "@trpc/server": "^11.4.3",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.3",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "fastify-sse-v2": "^4.2.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "png-chunk-text": "^1.0.0",
    "png-chunks-encode": "^1.0.0",
    "png-chunks-extract": "^1.0.0",
    "trpc-to-openapi": "^2.3.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^2.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.1.0",
    "@types/png-chunk-text": "^1.0.3",
    "@types/png-chunks-encode": "^1.0.2",
    "@types/png-chunks-extract": "^1.0.2",
    "drizzle-kit": "^0.31.4",
    "form-data": "^4.0.4",
    "vitest": "^3.2.4"
  }
}
