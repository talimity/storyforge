{
  "name": "@storyforge/backend",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build:native": "tsgo -b tsconfig.build.json",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "dev": "pnpm tsx watch src/main.ts",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write --unsafe .",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsgo -p tsconfig.json --noEmit",
    "typecheck:legacy": "tsc -p tsconfig.json --noEmit",
    "reset-character-colors": "tsx src/scripts/reset-character-colors.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/reply-from": "^12.4.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.3.0",
    "@fastify/websocket": "^11.2.0",
    "@storyforge/config": "workspace:*",
    "@storyforge/contracts": "workspace:*",
    "@storyforge/db": "workspace:*",
    "@storyforge/gentasks": "workspace:*",
    "@storyforge/inference": "workspace:*",
    "@storyforge/lorebooks": "workspace:*",
    "@storyforge/prompt-rendering": "workspace:*",
    "@storyforge/timeline-events": "workspace:*",
    "@storyforge/utils": "workspace:*",
    "@storyforge/yolo-onnx": "workspace:*",
    "@trpc/server": "catalog:",
    "colorthief": "^2.6.0",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.1.0",
    "fastify-sse-v2": "^4.2.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "png-chunk-text": "^1.0.0",
    "png-chunks-encode": "^1.0.0",
    "png-chunks-extract": "^1.0.0",
    "sharp": "catalog:",
    "superjson": "catalog:",
    "trpc-to-openapi": "catalog:",
    "zod": "catalog:",
    "zod-openapi": "catalog:"
  },
  "devDependencies": {
    "@types/colorthief": "^2.6.0",
    "@types/node": "catalog:",
    "@types/png-chunk-text": "^1.0.3",
    "@types/png-chunks-encode": "^1.0.2",
    "@types/png-chunks-extract": "^1.0.2",
    "@typescript/native-preview": "catalog:",
    "drizzle-orm": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
