{
  "name": "@storyforge/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/types.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json && pnpm run build:tspaths",
    "build:tspaths": "resolve-tspaths --out ./dist",
    "check": "run-p --continue-on-error lint typecheck",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "dev": "pnpm tsx watch src/main.ts",
    "fmt": "biome format --write .",
    "lint": "biome check --diagnostic-level error --write --unsafe .",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:completion": "pnpm tsx scripts/test-completion.ts",
    "test:import": "pnpm tsx scripts/test-card-import.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/reply-from": "^12.2.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.2.0",
    "@fastify/websocket": "^11.2.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@storyforge/config": "workspace:*",
    "@storyforge/db": "workspace:*",
    "@storyforge/inference": "workspace:*",
    "@storyforge/prompt-rendering": "workspace:*",
    "@storyforge/schemas": "workspace:*",
    "@storyforge/utils": "workspace:*",
    "@storyforge/yolo-onnx": "workspace:*",
    "@trpc/server": "catalog:",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "fastify-sse-v2": "^4.2.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "png-chunk-text": "^1.0.0",
    "png-chunks-encode": "^1.0.0",
    "png-chunks-extract": "^1.0.0",
    "sharp": "catalog:",
    "superjson": "catalog:",
    "trpc-to-openapi": "catalog:",
    "zod": "catalog:",
    "zod-openapi": "catalog:"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^2.0.0",
    "@types/node": "catalog:",
    "@types/png-chunk-text": "^1.0.3",
    "@types/png-chunks-encode": "^1.0.2",
    "@types/png-chunks-extract": "^1.0.2",
    "drizzle-orm": "catalog:",
    "form-data": "^4.0.4",
    "resolve-tspaths": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
